<Window x:Class="Lab6.UI.ShowTasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab6.UI"
        mc:Ignorable="d"
        Title="ShowTasks" Height="300" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Обновить" Margin="0,0,10,10" RenderTransformOrigin="-0.665,0.603" Click="Button_Click" HorizontalAlignment="Right" Width="127" Height="32" VerticalAlignment="Bottom"/>
        <TextBox IsReadOnly="True" x:Name="Tasks" Margin="10,10,10,47" TextWrapping="Wrap"/>
        <TextBox x:Name="EId" Margin="0,0,148,10" TextWrapping="Wrap" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="214"/>
        <Label Content="Id сотрудника" HorizontalAlignment="Left" Margin="10,0,0,13" Width="98" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
